# Database
MONGO_URI=mongodb://localhost:27017/greenhouse-os
MONGO_DB_NAME=greenhouse-os

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MQTT
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_PROTOCOL=mqtt
MQTT_USERNAME=
MQTT_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
KIOSK_JWT_EXPIRY=8h

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# Server
PORT=2500
CORS_ORIGIN=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info

# Feature Flags
ENABLE_KIOSK=true
ENABLE_MARKETPLACE=true
ENABLE_LLM=true
LLM_THINKING_ENABLED=true

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Site Configuration
DEFAULT_SITE_ID=default-greenhouse
DEFAULT_ZONE_ID=zone-a
